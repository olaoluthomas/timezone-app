{
  "name": "timezone",
  "version": "1.0.0",
  "description": "An application that displays current date, time, and timezone based on user's location and IP address",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:smoke": "jest tests/smoke",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "prepare": "husky",
    "pre-commit": "bash scripts/pre-commit.sh",
    "pre-push": "bash scripts/pre-push.sh",
    "create-pr": "bash scripts/create-pr.sh",
    "push": "git push && npm run create-pr"
  },
  "keywords": [
    "timezone",
    "geolocation",
    "ip-address",
    "datetime",
    "location",
    "claude-code",
    "ai-assisted",
    "production-ready"
  ],
  "author": "Simeon Thomas <olaoluthomas@github>",
  "repository": {
    "type": "git",
    "url": "https://github.com/olaoluthomas/timezone-app.git"
  },
  "bugs": {
    "url": "https://github.com/olaoluthomas/timezone-app/issues"
  },
  "homepage": "https://github.com/olaoluthomas/timezone-app#readme",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-cache": "^5.1.2",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "supertest": "^7.2.2"
  }
}
